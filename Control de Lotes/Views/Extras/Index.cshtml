@model IEnumerable<Control_de_Lotes.Models.Extras>

@{
    ViewData["Title"] = "Lluvias";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="d-flex justify-content-between align-items-end mb-3">
    <a asp-action="Create" class="btn btn-success">Cargar Lluvia</a>
</div>

<table class="table table-bordered table-striped w-100">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
            <th>Lote</th>
            <th>Milímetros</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>@Html.DisplayFor(modelItem => item.Lote.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Nota)</td>
                <td>
                    <a asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('¿Estás seguro que querés eliminar este registro?');">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
