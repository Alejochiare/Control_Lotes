@model Control_de_Lotes.Models.Siembra

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Siembra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProduccionEstimativa" class="control-label"></label>
                <input asp-for="ProduccionEstimativa" class="form-control" />
                <span asp-validation-for="ProduccionEstimativa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadSemillas" class="control-label"></label>
                <input asp-for="CantidadSemillas" class="form-control" />
                <span asp-validation-for="CantidadSemillas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Superficiesembrada" class="control-label"></label>
                <input asp-for="Superficiesembrada" class="form-control" />
                <span asp-validation-for="Superficiesembrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoteId" class="control-label"></label>
                <select asp-for="LoteId" class="form-control" asp-items="ViewBag.LoteId"></select>
                <span asp-validation-for="LoteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CultivoId" class="control-label"></label>
                <select asp-for="CultivoId" class="form-control" asp-items="ViewBag.CultivoId"></select>
                <span asp-validation-for="CultivoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a las lista </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
