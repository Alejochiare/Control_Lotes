@model Control_de_Lotes.Models.Cultivos

@{
    ViewData["Title"] = "Crear Cultivo";
}

<h4>Nuevo Cultivo</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Semilla" class="control-label">Nombre de la Semilla</label>
                <input asp-for="Semilla" class="form-control" />
                <span asp-validation-for="Semilla" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Cargar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
