@model Control_de_Lotes.Models.Fumigacion

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fumigacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto" class="control-label"></label>
                <input asp-for="Producto" class="form-control" />
                <span asp-validation-for="Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dosis" class="control-label"></label>
                <input asp-for="Dosis" class="form-control" />
                <span asp-validation-for="Dosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aplicador" class="control-label"></label>
                <input asp-for="Aplicador" class="form-control" />
                <span asp-validation-for="Aplicador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoteId" class="control-label"></label>
                <select asp-for="LoteId" class="form-control" asp-items="ViewBag.LoteId"></select>
                <span asp-validation-for="LoteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotivoId" class="control-label"></label>
                <select asp-for="MotivoId" class="form-control" asp-items="ViewBag.MotivoId"></select>
                <span asp-validation-for="MotivoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a las lista </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
